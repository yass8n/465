<%= form_tag(image_tag_search_path, method: "get") do %>
  <%= label_tag(:tag_string, "Tag Search") %>
  <%= text_field_tag(:tag_string) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Public images</h1>

<table>
  <thead>
    <tr>
      <th>Picture<th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @images.each do |image| %>
      <tr>
      <td><%= image_tag root_url + "/images/" + image.filename, size: "100x100", alt: image.filename %><td>
        <td><%= image.user.name %></td>

        <td><%= link_to 'Show', image %></td>
        <% if !current_user.nil? && image.user == current_user %>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

