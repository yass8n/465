<h2>Forgot your password?</h2>

<div class="center"><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %></div>

  <div class="field center">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions center">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<div class="center"><%= render "devise/shared/links" %></div>
