<%= link_to "<<", my_answers_path(current_user, page: 1) %>
<%= link_to "Prev", my_answers_path(current_user, page: current_page -1 ) if current_page > 1 %>
<% pages.times do |page| %>
    <!-- page at this point is a number...offset is where to start looking in the database -->
	<%= link_to page+1, my_answers_path(current_user, page: page + 1) %>
<% end %>
<%= link_to "Next", my_answers_path(current_user, page: current_page +1) unless current_page >= pages %>
<%= link_to ">>", my_answers_path(current_user, page: pages) %>

