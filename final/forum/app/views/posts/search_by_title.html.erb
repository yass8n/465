<h1 class="relative center style-text">Questions Matching '<strong><%= @title %></strong>' </h1><br>
<h4 class="relative center oil panel-small"><%= @filter_message %></h4>
<%= button_to 'New Post?', new_post_path, :method => :get, :class => 'button absolute top left padding-left padding-top'%>
<table class="CSSTableGenerator center">
  <thead>
    <tr>
      <th>User</th>
      <!-- <th>Views</th> -->
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.username %></td>
        <!-- <td><%= post.views %></td> -->
        <% post.title = post.title[0..40] + "..." unless post.title[40].nil? %>
        <!-- if the post has more than 20 letters, add a ... and only show some of it -->
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>