<% if params[:title].nil? %>
	<%= link_to "<<", posts_path(page: 1) %>
	<%= link_to "Prev", posts_path(page: current_page-1) if current_page > 1 %>
	<% pages.times do |page| %> 
	    <!-- page at this point is a number...offset is where to start looking in the database -->
		<%= link_to page+1, posts_path(page: page+1) %>
	<% end %>
	<%= link_to "Next", posts_path(page: current_page+1) unless current_page >= pages %>
	<%= link_to ">>", posts_path(page: pages) %>
<% elsif !params[:title].nil? %>
	<%= link_to "<<", title_search_path(page: 1, title: params[:title], answered: params[:answered], :filter => params[:filter], commit: "Lookup") %>
	<%= link_to "Prev", title_search_path(page: current_page-1, title: params[:title], answered: params[:answered], :filter => params[:filter], commit: "Lookup") if current_page > 1 %>
	<% pages.times do |page| %>
	    <!-- page at this point is a number...offset is where to start looking in the database -->
		<%= link_to page+1, title_search_path(page: page+1, title: params[:title], answered: params[:answered], :filter => params[:filter], commit: "Lookup") %>
	<% end %>
	<%= link_to "Next", title_search_path(page: current_page+1, title: params[:title], answered: params[:answered], :filter => params[:filter], commit: "Lookup") unless current_page >= pages %>
	<%= link_to ">>", title_search_path(page: pages, title: params[:title], answered: params[:answered], :filter => params[:filter], commit: "Lookup") %>
<% end %>

