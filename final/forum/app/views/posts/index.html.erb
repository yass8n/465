<h1>Listing posts</h1>
<table class="CSSTableGenerator center">
  <thead>
    <tr>
      <th><h4>Details</h4></th>
      <!-- <th>Views</th> -->
      <th><h4>Title</h4></th>
      <th><h4>Stats</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h5><%= post.user.username %></h5></td>
        <!-- <td><%= post.views %></td> -->
        <% post.title = post.title[0..40] + "..." unless post.title[40].nil? %>
        <!-- if the post has more than 20 letters, add a ... and only show some of it -->
        <td><h5><%= post.title %></h5></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <% if post.user == current_user  && post.answers.size == 0 && post.ratings.size == 0%>
          <!-- link_to 'Edit', edit_post_path(post)  -->
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
