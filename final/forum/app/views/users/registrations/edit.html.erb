<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if ( !resource.filename.nil? && resource.filename != "" ) %>
  <p><%= link_to 'Delete Profile Pic',  destroy_pic_path(id: resource.id), data: { confirm: 'Are you sure you want to delete your profile pic?' }, method: :delete  %></p>
    <%= render partial: "devise/images/image", locals: {resource: resource, size: "100x100", style:  "margin-top: -2px;"} %>
   <br>
  <% end %>
   <div>
  Update Profile Pic
  </div>
  <div><%= f.file_field :uploaded_file %><br></br>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :paypal_email %> </br>
    <%= f.email_field :paypal_email, placeholder: "optional" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :country %><br>
    <%= country_select("user", "country", priority_countries: ["US"]) %>
    <br></br>
  </div>

  <div id="states">
  <%= f.label :state %> <br>
  <%= select_tag(:state, options_for_select(Users::RegistrationsController.new.states)) %>
  <br></br>
  </div>
  
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => "button alert" %>
<% end %>

<h3>Cancel my account</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Delete Account" , data: { confirm: "Are you sure you want to delete your account?" }, :class => "button alert" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
