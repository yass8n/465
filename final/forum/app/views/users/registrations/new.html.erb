<div class="registration">
<%= image_tag root_url + "/images/questionmark.png", size: "100x100", :class => 'center'%>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="relative"><%= devise_error_messages! %></div>
  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email"  %>
  </div>

  <div class="field">
    <% placeholder = "Password..." + @minimum_password_length.to_s + " character minimum" %>
    <br>
    <%= f.password_field :password, autocomplete: "off", placeholder: placeholder %> 
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-Enter Password"  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :id => "sign-up", :class => "button alert hidden full-width" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="landing-icons">
<div class="relative"><h1 id="pitch" ><strong>Gain knowlwdge & cash at the same time!</strong></h1></div>
<div class="inline-block relative"><i class="step fi-comment-quotes"></i><div class="intro absolute inline-block"><h1>&nbsp;&nbsp;&nbsp;Post Questions</h1></div></div> <br>
<div class="inline-block relative"><i class="step fi-clipboard-pencil"></i><div class="intro absolute inline-block"> <h1>&nbsp;&nbsp;&nbsp;Submit Answers</h1></div></div> <br>
<div class="inline-block relative"><i class="step fi-dollar-bill"></i><div class="intro absolute inline-block"><h1>&nbsp;&nbsp;Get Paid!</h1> </div></div>
 </div>
